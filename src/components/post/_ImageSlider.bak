import 'keen-slider/keen-slider.min.css';
import { useKeenSlider } from 'keen-slider/react';

const ImageSlider = () => {
  const [sliderRef] = useKeenSlider<HTMLDivElement>({ loop: false, slides: { perView: 8, spacing: 10 } });

  return (
    <div className='w-full m-auto'>
      <div className='w-full m-auto p-4 text-center'>
        <div
          ref={sliderRef}
          className='keen-slider flex gap-4 overflow-x-auto'
        >
          {Array.from({ length: 10 }).map((_, index) => (
            <div
              key={index}
              className='keen-slider__slide w-[200px] h-[200px] cursor-pointer flex-shrink-0 relative rounded-lg overflow-hidden border border-gray-300 shadow-md bg-gray-200 flex items-center justify-center'
            >
              <div className='text-gray-500 font-bold'>Slide {index + 1}</div>
            </div>
          ))}
        </div>
      </div>
    </div>
  );
};

export default ImageSlider;
